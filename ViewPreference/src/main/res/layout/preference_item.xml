<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="@dimen/preference_min_height"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/preference_padding_top"
    android:layout_marginStart="@dimen/preference_margin_start"
    android:layout_marginLeft="@dimen/preference_margin_start"
    android:layout_marginEnd="@dimen/preference_margin_end"
    android:layout_marginRight="@dimen/preference_margin_end">
    <ImageView
        android:id="@+id/id_pre_icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/preference_icon_size"
        android:layout_height="@dimen/preference_icon_size"
        android:background="@android:color/transparent"
        android:layout_marginLeft="@dimen/preference_icon_margin_start"
        android:layout_marginStart="@dimen/preference_icon_margin_start"
        android:layout_marginEnd="@dimen/preference_icon_margin_end"
        android:layout_marginRight="@dimen/preference_icon_margin_end"
        android:visibility="gone"
        />
    <LinearLayout
        android:id="@+id/id_pre_description"
        android:layout_toEndOf="@id/id_pre_icon"
        android:layout_toRightOf="@id/id_pre_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView android:id="@+id/id_pre_title"
            style="@style/PreferenceTitle"
            android:maxLines="3"
            android:ellipsize="marquee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/id_pre_summary"
            style="@style/PreferenceSummary"
            android:maxLines="3"
            android:ellipsize="marquee"
            android:maxWidth="@dimen/preference_summary_width"
            android:textIsSelectable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <EditText android:id="@+id/id_pre_edit"
            style="@style/PreferenceSummary"
            android:maxLines="3"
            android:selectAllOnFocus="true"
            android:maxWidth="@dimen/preference_summary_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/preference_edit_size"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <com.xw.repo.BubbleSeekBar
            android:id="@+id/id_pre_seek_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:alpha="0.5"
            app:bsb_max="50"
            app:bsb_min="1"
            app:bsb_section_count="5"
            app:bsb_progress="10"
            app:bsb_touch_to_seek="true"
            app:bsb_hide_bubble="true"
            app:bsb_show_section_mark="true"
            app:bsb_show_section_text="true"
            app:bsb_section_text_position="below_section_mark"
            app:bsb_track_color="@android:color/holo_blue_light"
            app:bsb_second_track_color="@android:color/holo_orange_light"/>
        <FrameLayout android:id="@+id/id_pre_preview"
            android:background="@color/colorAccent"
            android:layout_marginRight="@dimen/preference_preview_margin_end"
            android:layout_marginEnd="@dimen/preference_preview_margin_end"
            android:layout_width="@dimen/preference_preview_size"
            android:layout_height="@dimen/preference_preview_size"
            android:visibility="gone"
            />
        <Switch android:id="@+id/id_pre_switch"
            android:layout_width="@dimen/preference_button_width"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <Button android:id="@+id/id_pre_btn_set"
            android:layout_width="@dimen/preference_button_width"
            android:layout_height="wrap_content"
            android:text="@string/button_set"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>